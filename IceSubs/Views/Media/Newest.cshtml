@model IEnumerable<Medium>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CustomHeader{
    <h1>Newest</h1>

}

<table class="result">
    <thead>
    <tr>   
        <th>Title</th>   
        <th>User</th>
        <th>Rating</th>
        <th>Popularity</th>
        <th>Language</th>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.ActionLink(item.Title, "Detail", new { MediaID = item.MediaID })</td>
        <td>@item.IceUser.Username </td>
        <td><img src="~/gfx/stars.png" alt="Rating"></td>
        <td>@item.Translation.Counter</td>
        <td>
            <a href="#"><img src="~/gfx/flag_is.png" alt="Download Icelandic translation"></a>&nbsp;
            <a href="#"><img src="~/gfx/flag_uk.png" alt="Download Icelandic translation"></a>
        </td>
    </tr>
    }

</table>


